<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wanghaisheng.com.xiaoya">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:name=".AppContext"
        android:allowBackup="true"
        android:icon="@mipmap/logo2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.MainActivity"/>
        <activity android:name=".ui.daily.StoryDetailActivity"/>
        <activity android:name=".ui.science.ScienceDetailActivity"/>
        <activity android:name=".ui.movie.MovieDetailActivity"/>
        <activity android:name=".ui.setting.SettingActivity"/>
        <activity android:name=".ui.collection.BaseCollectionActivity"/>
        <activity android:name=".ui.other.BrowserActivity"/>
        <activity android:name=".ui.me.FeedbackActivity"/>
        <activity android:name=".ui.me.SelectImageActivity"/>
        <activity android:name=".ui.meizi.MeiziPersonListActivity" android:configChanges="keyboardHidden|orientation"/>
        <activity android:name=".ui.meizi.MeiziLargePicActivity" android:configChanges="keyboardHidden|orientation"/>
        <activity android:name=".ui.meizi.FuliActivity" android:configChanges="keyboardHidden|orientation"/>

        <service android:name=".service.SaveAllImageService"
            android:process=":DownloadService"/>
    </application>

</manifest>

